<%- include('./includes/header', {title: 'Wesel Motors'}) %>
<main>
    <section class="bannerst" id="banner-rooper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-text">
                        <div class="main-hosting">
                            <a href="index.html">Home</a><span><i class="fa-solid fa-chevron-right"></i></span>
                            <h6>About Us</h6>

                        </div>

                        <h2>About Us</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="main-host-about">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-12 col-md-6">
                    <div class="main-about-us-banner">
                        <h2>About Wasel Motors</h2>
                        <p>
                            Welcome to <strong>Wasel Motors</strong>, your trusted destination for high-quality vehicles
                            and outstanding customer service.
                            With over <strong>10 years of experience</strong> in the automotive industry, we offer a
                            curated selection of cars to fit every lifestyle and budget.
                        </p>
                        <p>
                            From fuel-efficient hatchbacks to family-friendly SUVs and powerful sedans — each vehicle in
                            our inventory is handpicked, fully inspected, and ready to drive.
                            Our team is committed to transparency, reliability, and long-term relationships with our
                            customers.
                        </p>
                        <p><strong>Wasel Motors — Where Quality Meets the Road.</strong></p>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="main-about-img">
                        <img src="/demo-custom/car-project/images/XXXL.webp" class="img-fluid" alt="Wasel Motors showroom">
                    </div>
                </div>
            </div>
        </div>
    </section>
     
    <section class="from-sec">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-6">
                    <div class="main-cont">
                        <img src="/demo-custom/car-project/images/form-sec.png" class="img-fluid" alt="img">
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="main-texture">
                        <h2>Get In Touch</h2>
                        <form action="">
                            <ul>
                                <li>
                                    <span>First Name</span><br>
                                    <input type="text" placeholder="Enter Your First Name...">
                                </li>
                                <li>
                                    <span>Last Name</span><br>
                                    <input type="text" placeholder="Enter Your Last Name...">
                                </li>
                            </ul>
                            <div class="main-looper">
                                <label>
                                    Email Address
                                </label>
                                <br>
                                <input type="email" placeholder="Enter Your Email...">
                            </div>
                            <div class="main-looper">
                                <label>
                                    Phone Number
                                </label>
                                <br>
                                <input type="number" placeholder="Enter Your Number...">
                            </div>
                            <div class="main-looper">
                                <label>
                                    Message
                                </label>
                                <br>
                                <textarea name="text" id="" placeholder="Enter Your message..."></textarea>
                            </div>
                            <button class="submit-mention">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./includes/footer') %>
</main>